import("//build/toolchain/apple/toolchain.gni")

apple_toolchain("clang_arm") {
  toolchain_args = {
    current_cpu = "arm"
    current_os = "mac"
  }
}

apple_toolchain("clang_arm64") {
  toolchain_args = {
    current_cpu = "arm64"
    current_os = "mac"
  }
}

apple_toolchain("clang_x64") {
  toolchain_args = {
    current_cpu = "x64"
    current_os = "mac"

    if (target_os == "ios") {
      # TODO(crbug.com/753445): the use_sanitizer_coverage arg is currently
      # not supported by the Chromium mac_clang_x64 toolchain on iOS
      # distribution.
      use_sanitizer_coverage = false
    }
  }
}

apple_toolchain("clang_x86") {
  toolchain_args = {
    current_cpu = "x86"
    current_os = "mac"
  }
}

apple_toolchain("clang_x86_v8_arm") {
  toolchain_args = {
    current_cpu = "x86"
    current_os = "mac"

    if (defined(v8_current_cpu)) {
      v8_current_cpu = "arm"
    }
  }
}

apple_toolchain("clang_x86_v8_mipsel") {
  toolchain_args = {
    current_cpu = "x86"
    current_os = "mac"

    if (defined(v8_current_cpu)) {
      v8_current_cpu = "mipsel"
    }
  }
}

apple_toolchain("clang_x64_v8_arm64") {
  toolchain_args = {
    current_cpu = "x64"
    current_os = "mac"

    if (defined(v8_current_cpu)) {
      v8_current_cpu = "arm64"
    }
  }
}

apple_toolchain("clang_x64_v8_mips64el") {
  toolchain_args = {
    current_cpu = "x64"
    current_os = "mac"

    if (defined(v8_current_cpu)) {
      v8_current_cpu = "mips64el"
    }
  }
}
